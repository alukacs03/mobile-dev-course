<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="14dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="18dp"
    app:cardBackgroundColor="@color/card_bg"
    app:strokeWidth="2dp"
    app:strokeColor="@color/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMeterNumber"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Óraszám: 12345"
            app:chipIcon="@android:drawable/ic_menu_info_details"
            app:chipIconTint="@color/colorPrimary"
            app:chipBackgroundColor="@color/chip_bg"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textReadingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-04-18"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/colorAccent"
            android:drawableStart="@android:drawable/ic_menu_today"
            android:drawablePadding="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chipMeterNumber"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textMeterValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="678.0 m³"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
